<?xml version="1.0" encoding="utf-8"?>
<com.example.gittest.MyCos xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:id="@+id/parent1"
    tools:context=".MainActivity">

    <com.example.gittest.MyFragmeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/first"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/drawable_bg_underway_info1" />

        <ImageView
            android:id="@+id/second"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/drawable_bg_underway_info" />
    </com.example.gittest.MyFragmeLayout>
</com.example.gittest.MyCos>